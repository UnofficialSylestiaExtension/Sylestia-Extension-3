{
    "manifest_version": 3,
    "name": "Sylestia Extension 3",
    "version": "2.0.0",
  
    "description": "Quality-of-Life extension for the pet site Sylesia.com. Adds a mass release button to the stables.",
  
    "content_scripts": [
      {
        "matches": [
            "*://www.sylestia.com/stables/*"
            ],
        "js": ["mass-release.js"]
      }
    ]

